{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ES6",
    "paths": {
      "@/*": ["./src/*"],
      "@comp/*": ["./src/components/*"],
      "@use/*": ["./src/compositions/*"],
      "@const/*": ["./src/constant/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dist-staging"]
}